        <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
        <script>
            $(function () {
                $('#tian').click(function () {
                    $('.xdiv').show();
                    $('.xdiv').css('box-shadow', '0 0 30px #d2d2d2');
                });
                $('#GBButton').click(function () {
                    $('.xdiv').hide();
                });
            });
            layui.use(['table', 'jquery'], function () {
                var table = layui.table;
                var $ = layui.jquery;

                $("#btnHSearch").click(function () {
                    $("#a").toggle();
                })

                var tableIns = table.render({
                    elem: '#test'
                    , url: '/Y/Queryth'
                    , title: '用户数据表'
                    , toolbar: '#toolbarDemo' //开启头部工具栏，并为其绑定左侧模板
                    , where: {
                        id: "0",
                        check: ""
                    }
                    , cols: [[
                        {
                            type: 'checkbox',
                            fixed: 'left'
                        },
                        {
                            field: 'thID',
                            title: '退货单号',
                            fixed: 'left'
                        },
                        {
                            field: 'thType',
                            title: '退货类型',
                            edit: 'text',
                            //templet: function (res) {
                            //    console.log(res)
                            //    return "<button>" + res.rkType + "</button>"
                            //}
                        },
                        {
                            field: 'Count',
                            title: '退货数量',
                            width: 150
                            //edit: 'text',
                            //templet: function (res) {
                            //    console.log(res.ID)
                            //    return '<em>' + res.email + '</em>'
                            //}
                        },
                        {
                            field: 'check1',
                            title: '是否通过审核',
                            width: 80,
                            edit: 'text',
                            // sort: true
                        },

                        {
                            field: 'UserName',
                            title: '制单人',
                            width: 100
                        },
                        {
                            field: 'CreateTime', templet: "<div>{{layui.util.toDateString(d.startDate, 'yyyy-MM-dd')}}</div>",
                            title: '操作时间'
                        },


                        {
                            fixed: 'right',
                            title: '操作',
                            toolbar: '#barDemo',
                            width: 150
                        }
                    ]]
                    , page: true,
                    parseData: function (res) { //将原始数据解析成 table 组件所规定的数据
                        console.log(res)
                        return {
                            "code": "0", //解析接口状态
                            "msg": "", //解析提示文本
                            "count": res.PageCount, //解析数据长度
                            "data": res.DataList //解析数据列表
                        };
                    }
                });
                $("#gritter-remove-all").click(function () {
                    tableIns.reload({
                        where: { //设定异步数据接口的额外参数，任意设
                            id: $("#txtOrderNum").val(),
                            check: ""
                            //…
                        }
                        , page: {
                            curr: 1 //重新从第 1 页开始
                        }
                    });
                });
                $(".btn").on("click", function () {
                    tableIns.reload({
                        where: { //设定异步数据接口的额外参数，任意设

                            check: $(this).val()
                            //…
                        }
                        , page: {
                            curr: 1 //重新从第 1 页开始
                        }
                    });
                });

                //头工具栏事件
                table.on('toolbar(test)', function (obj) {
                    var checkStatus = table.checkStatus(obj.config.id);
                    switch (obj.event) {
                        case 'getCheckData':
                            var data = checkStatus.data;
                            layer.alert(JSON.stringify(data));
                            break;
                        case 'getCheckLength':
                            var data = checkStatus.data;
                            layer.msg('选中了：' + data.length + ' 个');
                            break;
                        case 'isAll':
                            layer.msg(checkStatus.isAll ? '全选' : '未全选');
                            break;

                        //自定义头工具栏右侧图标 - 提示
                        case 'LAYTABLE_TIPS':
                            layer.alert('这是工具栏右侧自定义的一个图标按钮');
                            break;
                    };
                });


                //监听行工具事件
                table.on('tool(test)', function (obj) {
                    var data = obj.data;
                    //console.log(obj)
                    if (obj.event === 'del') {
                        layer.confirm('真的删除行么', function (index) {
                            obj.del();
                            layer.close(index);
                        });
                    } else if (obj.event === 'edit') {
                        layer.prompt({
                            formType: 2
                            , value: data.email
                        }, function (value, index) {
                            obj.update({
                                email: value
                            });
                            layer.close(index);
                        });
                    }
                });
            });
            //添加退货表
            function getaddth() {
                $.ajax({
                    type: "post",
                    url: "/Y/getaddth",
                    data: {
                        thType: $("#thType").val(),
                        Count: $("#Count").val(),
                        check1: $("#check1").val(),
                        CreateUser: $("#UserName").val(),
                        CreateTime: $("#CreateTime").val(),

                    },
                    dataType: "json",

                    success: function (result) {
                        if (result > 0) {
                            alert("新增成功");
                            window.location("/Y/sales_management");
                        } else {
                            alert("新增失败");
                        }
                    }, error: function (ex) {
                        alert(ex.responseText);
                    }
                });
            }

        </script>




@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>后台管理</title>
    
    <link href="~/images3.css" rel="stylesheet" />
</head>

    <body>
        <div class="login_box">
            <div class="login_l_img"><img src="~/images3/login-img.png" /></div>
            
            <div class="login">
                <div class="login_logo"><a href="#"><img src="~/images3/login_logo.png" /></a></div>
                <div class="login_name">
                    <p>后台管理系统</p>
                </div>
                
                    <input name="username" type="text" value="用户名" onfocus="this.value=''" onblur="if(this.value==''){this.value='用户名'}">
                    <span id="password_text" onclick="this.style.display='none';document.getElementById('password').style.display='block';document.getElementById('password').focus().select();">密码</span>
                    <input name="password" type="password" id="password" style="display:none;" onblur="if(this.value==''){document.getElementById('password_text').style.display='block';this.style.display='none'};" />
                    <input value="登录" style="width:100%;" type="button" name="login">
              
            </div>
            <div class="copyright">深圳腾讯有限公司 版权所有©2016-2022 技术支持电话：88888</div>
        </div>
        
    </body>

</html>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $(function () {
        $("[name='login']").on("click", function () {
            $.ajax("/G/GLogin",{
                type: "post",
                data: {
                    username: $("[name='username']").val(),
                    password: $("[name='password']").val()
                }, success(res) {
                    if (res == "1") {
                        sessionStorage["Userid"] = $("[name='username']").val();
                        window.location.href = "/Storage/inde";
                        
                    } else {
                        alert("账号或密码错误");
                    }
                }, error(err) {
                    alert(err.responseText);
                }
            });
        });

    });
</script>